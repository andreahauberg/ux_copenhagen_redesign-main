<nav>
  <ul class="nav_menu">
    <li><a href="/">Home</a></li>
    <li><a href="/speakers">Speakers</a></li>
    <li><a href="/about">About</a></li>
    <li><a href="/tickets">Tickets</a></li>
    <li><a href="/program">Program</a></li>
  </ul>
  <div class="hamburger">
    <span class="bar"></span>
    <span class="bar"></span>
    <span class="bar"></span>
  </div>
</nav>

<style>
  /* NAVIGATIONSMENU */
  li {
    list-style: none;
  }

  a {
    text-decoration: none;
    color: var(--primary-color);
  }

  nav {
    min-height: 70px;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: end;
    padding: 0 24px;
  }

  .nav_menu {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    /* align-items: center; */
    gap: 60px;
    font-size: var(--h2-size);
  }
  .hamburger {
    display: none;
    cursor: pointer;
  }

  .bar {
    display: block;
    width: 25px;
    height: 3px;
    margin: 5px auto;
    transition: all 0.3s ease-in-out;
    background-color: var(--primary-color);
  }

  @media (max-width: 768px) {
    .nav_menu {
      flex-direction: column;
      background-color: var(--card-color);
      position: absolute;
      overflow: hidden;
      left: -200%;
      top: -1em;
      justify-content: space-evenly;
      font-size: var(--h1-size);
      padding: 0;
      width: 100%;
      height: 100vh;
      text-align: center;
      transition: 0.3s;
    }
    .hamburger {
      display: block;
    }

    .hamburger.active .bar:nth-child(1) {
      translate: 0 8px;
      rotate: 45deg;
    }

    .hamburger.active .bar:nth-child(2) {
      opacity: 0;
    }

    .hamburger.active .bar:nth-child(3) {
      translate: 0 -8px;
      rotate: -45deg;
    }

    .nav_menu.active {
      left: 0;
    }
  }
</style>

<script src="../js/script.js"></script>
